<h2>Tiny App</h2>

<% if(username === undefined) { %>
  <form method="POST" action="/login">
    <label>Login: </label>
    <input type="text" name="username">
    <input type="submit" value="Login">
  </form>
<% } else { %>
  <form method="POST" action="/logout">
    <label>Welcome, <%= username %>!</label>
    <input type="submit" value="Logout">
  </form>
<% } %>
