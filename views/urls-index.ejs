

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tiny App</title>
    <style>
      tr, td, th {
        line-height: 1.5em;
      }
      #allPage {
        width: 960px;
        margin: 50px auto 50px auto;
      }
      button {
        width: 100%;
        background: #333333;
        color: white;
      }
    </style>
  </head>
  <body>
    <div id="allPage">
      <% include ./partials/_header %>
      <p><%= username %></p>
      <table>
        <tr style="font-weight: bold; font-size: 1.5em; line-height: 2em">
          <td colspan="4" style="text-align: center">URL Index</td>
        </tr>
        <% for(var url in urls) { %>
        <tr>
          <td style="width: 300px">
            <%= urls[url] %>
          </td>
          <td style="width: 50px">
            <a href="/urls/<%= url %>">Edit</a>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>/delete">
              <input type="submit" value="Delete">
            </form>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>">
              <input type="submit" value="Short URL">
            </form>
          </td>
        </tr>
        <% } %>
        <tr>
          <td colspan="4"><a href="/urls/new/"><button>Generate Short URL</button></a></td>
        </tr>
      </table>

